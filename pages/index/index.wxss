/**index.wxss**/

.page-box {
    /* height: 100%; */
    box-sizing: border-box;
}

.page-top {
    padding: 0 33rpx;
    background: #fff;
    padding-bottom: 60rpx;
}
.page-top>view{
  width: 100%;
  box-shadow:0px 2px 8px 0px rgba(182, 182, 182, 0.5);
  border-radius: 10rpx;
  height: 341rpx;
   margin-top: 30rpx;

}

.index-search {
    background: #f7f7f9;
    text-align: center;
    height: 74rpx;
}

.swiper-item {
    height: 100%;
    width: 100%;
    border-radius: 10rpx;
}
.swiper-item image{
  width: 100%;
  height: 100%;
}

.swiper-box {
    height: 341rpx;
    width: 100%;
   
    border-radius: 10px;
}


/* tab部分 */


.title {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 31rpx 0 00rpx 0;
    background: #F7F7F8;

}

.titleSel {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: PingFang SC;
}

.titleactive {
    font-size: 36rpx;
    font-weight: 500;
    color: rgba(33, 34, 38, 1);
    z-index: 10;
}

.titleUnsel {
    color: #212226;
    font-size: 32rpx;
}

.headerLineSel {
    background: url("http://api.sandbox.mall.gulltour.com/wx_images/choose.png") no-repeat;
    background-size: 100% 100%;
    height: 14rpx;
    width: 86rpx;
    position: relative;
    margin-top: -9rpx;
}

.headerLineUnsel {
    height: 6rpx;
    width: 40rpx;
    position: relative;
    /* margin-top: 10rpx; */
}



/* 调整轮播图指示点的位置 */

.wx-swiper-dots{
    position:relative;
    left: unset!important;
    right: 0;
}
.wx-swiper-dots.wx-swiper-dots-horizontal{

    margin-bottom: -5rpx;
}
 




