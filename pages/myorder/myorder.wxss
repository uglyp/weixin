.page-box {
    height: 100%;
    box-sizing: border-box;
}


.title {
    display: flex;
    align-items: center;
    margin: 0 26rpx;
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
    margin-bottom: 35rpx;
}

.titleSel {
    display: flex;
    flex-direction: column;
    font-family: PingFang SC;
    margin-right: 20rpx;
    border-radius: 4rpx;
    background-color: #F6F6F6;
    


}

.titleactive {
    background:linear-gradient(94deg,rgba(250,140,30,1),rgba(252,172,61,1));
    border-radius:4px;
    padding: 14rpx 20rpx;
    color: #FFFFFF;

}

.titleUnsel {
    padding: 14rpx 20rpx;
    margin: 4rpx;
    border-radius: 4rpx;

}
.recordItem {
    background:rgba(255,255,255,1);
    border-radius:10px;
    padding: 43rpx 42rpx 34rpx 42rpx;
    margin-bottom: 20rpx;
}

.page-content {
    background: #F7F7F7;
    overflow: hidden;
}
.swiper-content {
    margin: 30rpx 26rpx;
}

.image-header {
    width: 44rpx;
    height: 44rpx;
    border-radius: 4rpx;
    margin-right: 24rpx;
}

.content-image-level-box {
    display: flex;

}

.content-item-name {
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(51,51,51,1);
}

.content-item-tag {
    background: linear-gradient(94deg, rgba(235, 145, 61, 1), rgba(240, 175, 84, 1));
    border-radius: 4rpx;
    padding: 5rpx 15rpx;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(254, 254, 254, 1);
    margin-left: 20rpx;
}
.item-top-box{
    display: flex;
    justify-content: space-between;
    padding-bottom: 27rpx;
    border-bottom: 1px #E8E8E8 solid;
}
.top-box-time{
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
}
.top-box-status{
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:600;
    color:rgba(234,51,35,1);
}
.cancel-order{
    border:1rpx solid rgba(141,117,80,1);
    border-radius:4rpx;
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:600;
    color:rgba(119,89,40,1);
    width: 200rpx;
    height: 56rpx;
    text-align: center;
    line-height: 56rpx;
    float: right;
}
.content-item-dsc {
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:#333333;
    margin-top: 21rpx;
}
.content-item-price{
    margin-top: 29rpx;
    font-size:28rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(136,136,136,1);
}
.content-item-info {
    font-size: 32rpx;
    font-family: PingFang SC;
    font-weight: 300;
    color: rgba(0, 0, 0, 1);
    margin-top: 26rpx;
}

.content-item-imgbox {
    display: flex;
    justify-self: space-between;
    flex-wrap: wrap;
    margin-top: 29rpx;
}

.content-item-img {
    width: 214rpx;
    height: 214rpx;
    margin-top: 9rpx;
}

.publish-time{
    padding-top: 30rpx;
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
}
