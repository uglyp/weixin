/* pages/user/user.wxss */
.user-page{
    position: relative;

}
.content-box{
    /* overflow: hidden; */
    margin-top: 117rpx;
}
.user-header-bg{
    width: 100%;
}
.user-info-card{
    margin-top: -200rpx;
    margin:0 36rpx;
    text-align: center;
    background:rgba(255,255,255,1);
    border-radius:10px;
    box-shadow: 0 2px 27px 6px rgba(0, 0, 0, .12);
    position: absolute;
    top: 79rpx;
    width: 680rpx;
    padding: 41rpx 0;
    z-index: 10;
}
.user-header-log{
    width:140rpx;
    height:140rpx;
    border-radius:50%;
    margin-bottom: 20rpx;

    
}
.user-username{
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(0,0,0,1);
    padding-top: 24rpx;
}
.mysupply-goods{
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(0,0,0,1);
}
.my-tab-box{
    display: flex;
    justify-content: space-around;
    margin-top: 60rpx;
}
.content-item{
    margin: 0rpx 40rpx 0 40rpx;
    padding: 35rpx 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.item-left{
    display: flex;
}
.item-label{
    font-size:30rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(0,0,0,1);
    line-height: 34rpx;
}
.login{
    width:170rpx;
    height:54rpx;
    border:2rpx solid rgba(20,20,20,1);
    border-radius:10rpx;
    text-align: center;
    line-height: 54rpx;
    margin: 0 auto;
    font-size: 30rpx;
}
.bg-line{
    height: 20rpx;
    width: 100%;
    background:rgba(247, 247, 249, 1) ;
}
.btn-contact{
    flex: 1;
    display:  flex;
    width: 100%!important;
    justify-content: space-between;
    background: #ffffff;
    align-items: center;
    padding: 35rpx 40rpx!important;

}
    