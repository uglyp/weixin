/* pages/source/source.wxss */.page-box {
    height: 100%;
    box-sizing: border-box;
}

.recordItem {
    background:rgba(255,255,255,1);
    border-radius:10px;
    padding: 27rpx 20rpx 30rpx 20rpx;
    margin-bottom: 20px;
}

.page-content {
    background: #F7F7F7;
    overflow: hidden;
}
.swiper-content {
    margin: 30rpx 29rpx;
    /* background: #fff; */
}

.image-header {
    width: 83rpx;
    height: 84rpx;
    border-radius: 4rpx;
    margin-right: 23rpx;
}

.content-image-level-box {
    width: 83rpx;
    height: 84rpx;
    border-radius: 4rpx;
    position: relative;
}

.content-item-top {
    display: flex;
}

.image-level {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    bottom: 0;
    right: -10rpx;
}

.content-item-name {
    font-size: 30rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(230, 126, 15, 1);
}

.content-item-tag {
    background: linear-gradient(94deg, rgba(235, 145, 61, 1), rgba(240, 175, 84, 1));
    border-radius: 4rpx;
    padding: 5rpx 15rpx;
    font-size: 26rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(254, 254, 254, 1);
    margin-left: 20rpx;
}

.content-item-dsc {
    font-size: 24rpx;
    font-family: PingFang SC;
    font-weight: 400;
    color: rgba(136, 136, 136, 1);
}

.content-item-info {
    font-size: 32rpx;
    font-family: PingFang SC;
    font-weight: 300;
    color: rgba(0, 0, 0, 1);
    margin-top: 26rpx;
}

.content-item-imgbox {
    display: flex;
    justify-self: space-between;
    flex-wrap: wrap;
    margin-top: 29rpx;
}

.content-item-img {
    width: 214rpx;
    height: 214rpx;
    margin-top: 9rpx;
}
.publish-time{
    padding-top: 30rpx;
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(153,153,153,1);
}