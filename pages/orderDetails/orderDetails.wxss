    margin-top: 29rpx;
}

.good-remaider{
    font-size:26rpx;
    font-family:PingFang SC;
    font-weight:400;
    color:rgba(136,136,136,1);
    margin-top: 34rpx;
}

.select-time{
    position: relative;
}
.select-time-box {
    background-color: #eee;
    padding: 0 20rpx;
    width: 90%;
    position: absolute;
    top: 84rpx;
    left: -3rpx;
    z-index: 10;
    overflow: hidden;
    animation: mysecond 0.5s;
}
 
@keyframes mysecond {
    from {
        height: 0rpx;
    }
 
    to {
        height: 200rpx;
    }
}
